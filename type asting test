import time

# Sample text
text = "The quick brown fox jumps over the lazy dog."

print("Type the following sentence:")
print(text)
input("Press Enter when you are ready to start...\n")

start_time = time.time()
typed_text = input("Start typing: ")
end_time = time.time()

# Calculate typing speed
time_taken = end_time - start_time
word_count = len(typed_text.split())
speed_wpm = word_count / (time_taken / 60)

# Accuracy calculation
correct_chars = sum(1 for i, c in enumerate(typed_text) if i < len(text) and c == text[i])
accuracy = (correct_chars / len(text)) * 100

print(f"\nTime taken: {time_taken:.2f} seconds")
print(f"Typing Speed: {speed_wpm:.2f} words per minute")
print(f"Accuracy: {accuracy:.2f}%")
